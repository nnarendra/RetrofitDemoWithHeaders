<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.naren.connectingwithserverviaretrofit.activityies.LoginActivity"
    tools:showIn="@layout/activity_login">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_40dp"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawablePadding="@dimen/size_8dp"
        android:gravity="center"
        android:text="@string/msg_mycotra"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_25"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_40dp"
        android:drawableLeft="@drawable/user_avatar"
        android:drawablePadding="@dimen/size_8dp"
        android:ems="10"
        android:hint="@string/msg_username"
        android:imeOptions="actionNext"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:drawableLeft="@drawable/lock_icon"
        android:drawablePadding="@dimen/size_8dp"
        android:ems="10"
        android:hint="@string/msg_password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user_name" />

    <Button
        android:id="@+id/btn_login"
        style="@style/CommonBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_24dp"
        android:layout_marginStart="@dimen/size_24dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:text="@string/label_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <TextView
        android:id="@+id/tv_forgot_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_24dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:text="@string/action_forgot_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />


    <TextView
        android:id="@+id/tv_or_login_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:text="@string/msg_or_login_with"
        app:layout_constraintBottom_toTopOf="@+id/iv_linked_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgot_pwd" />

    <View
        style="@style/DividerLine"
        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginStart="@dimen/size_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_or_login_with"
        app:layout_constraintStart_toEndOf="@+id/tv_or_login_with" />

    <View
        style="@style/DividerLine"
        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginEnd="@dimen/size_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_or_login_with"
        app:layout_constraintRight_toLeftOf="@+id/tv_or_login_with" />

    <Button
        android:id="@+id/btn_sign_up"
        style="@style/CommonBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_24dp"
        android:layout_marginEnd="@dimen/size_24dp"
        android:layout_marginStart="@dimen/size_24dp"
        android:text="@string/label_signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_marginStart="@dimen/size_8dp"
        android:text="@string/msg_new_user"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        style="@style/DividerLine"
        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginStart="@dimen/size_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <View
        style="@style/DividerLine"
        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginEnd="@dimen/size_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintRight_toLeftOf="@+id/textView3" />

    <ImageView
        android:id="@+id/iv_facebook_login"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginStart="@dimen/size_70dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/iv_google_login"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginStart="@dimen/size_16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/iv_facebook_login"
        app:srcCompat="@drawable/google_plus" />

    <ImageView
        android:id="@+id/iv_linked_login"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginStart="@dimen/size_16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/iv_google_login"
        app:srcCompat="@drawable/linkedin" />

    <ImageView
        android:id="@+id/iv_twitter_login"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginStart="@dimen/size_16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/iv_linked_login"
        app:srcCompat="@drawable/twitter" />


</android.support.constraint.ConstraintLayout>
